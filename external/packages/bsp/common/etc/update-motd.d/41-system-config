# 	else
# 		echo -e "[\e[31m Menu-driven system configuration (beta)\e[0m: \e[1msudo dpkg -i orangepi-config.deb\e[0m ]\n"
# 	fi
# fi

echo -e "[\e[31m Welcome to biqu board\e[0m: \e[1m\n"

exit 0
